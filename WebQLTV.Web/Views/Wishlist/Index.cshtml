@using QuanLyThuVIen.Model;

<section class="pt-5 pb-5">
    <div class="container">
        <div class="row w-100">
            <div class="col-lg-12 col-md-12 col-12">
                <h3 class="display-5 mb-2 text-center">WISHLIST</h3>
                <p class="mb-5 text-center">
                </p>
                <table id="shoppingCart" class="table table-condensed table-responsive">
                    <thead>
                        <tr>

                            <th style="width:50%">Sản Phẩm</th>
                            <th style="width:20%">Ngày dự kiến có hàng</th>
                            <th></th>

                            @*<th style="width:10%"><button style="margin-left: 45px; border-radius: 5px;box-shadow:none; border-color: #6495ED; background-color: #6495ED; padding: 5px; width: 150px ">Chọn Tất Cả</button></th>*@

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in WebQLTV.BusinessLayer.CommonDataService.ListWishlist(((DocGia)Session["Account"]).MaDocGia))
                        {

                            Sach s = WebQLTV.BusinessLayer.CommonDataService.GetSach(item.MaSach);
                            <tr>
                                <td data-th="Product">
                                    <div class="row">
                                        <div class="col-md-3 text-left">
                                            <img src="@s.Anh" alt="" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
                                        </div>
                                        <div class="col-md-9 text-left mt-sm-2">
                                            <h4>@s.TenSach</h4>
                                            <p class="font-weight-light">@WebQLTV.BusinessLayer.CommonDataService.GetNXB(s.MaNhaXuatBan).TenNhaXuatBan</p>
                                        </div>
                                    </div>
                                </td>
                                <td data-th="Price"><p style="margin-top:20px">@item.NgayDuKien.Date.ToString("dd/MM/yyyy")</p></td>
                                <td class="actions" data-th="">
                                    @if (WebQLTV.BusinessLayer.CommonDataService.GetSach(item.MaSach).SoLuongCon > 0)
                                    {
                                        <div class="text-center">
                                            <a href="~/book/addtocart/@s.MaSach/1" class="btn btn-primary">
                                                <i class="fa fa-trash-o" aria-hidden="true">Thêm vào giỏ hàng ngay</i>
                                            </a>
                                            <a href="~/wishlist/delete/@s.MaSach" class="btn btn-white border-secondary bg-white btn-md mb-2">
                                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            </a>
                                        </div>

                                    }
                                    else
                                    {
                                        <a href="~/wishlist/delete/@s.MaSach" class="btn btn-white border-secondary bg-white btn-md mb-2">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        </a>
                                    }

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

                <div class="float-right text-right">
                </div>
            </div>
        </div>
        <div class="row mt-4 d-flex align-items-center">
            <div class="col-sm-6 order-md-2 text-right">
                <a href="~/cart/xacnhanmuon" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Xác nhận mượn</a>
            </div>
            <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                <a href="~/book">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i> Tiếp tục chọn sách

                </a>
            </div>
        </div>
    </div>
</section>

