@model WebQLTV.DomainModel.DanhSachMuon
@using QuanLyThuVIen.Model;
@using WebQLTV.DomainModel;
<section class="pt-5 pb-5">
    <div class="container">
            <div class="row w-100">
                <div class="col-lg-12 col-md-12 col-12">
                    <h3 class="display-5 mb-2 text-center">GIỎ SÁCH</h3>
                    <p class="mb-5 text-center">
                        <i class="text-info font-weight-bold">@Model.data.Count</i> SÁCH TRONG WISHLIST
                    </p>
                    @Html.ValidationMessage("SoLuong")
                    <table id="shoppingCart" class="table table-condensed table-responsive">
                        <thead>
                            <tr>

                                <th style="width:60%">Sản Phẩm</th>
                                <th style="width:12%">Hạn trả</th>
                                <th style="width:10%">Số Lượng</th>
                                @*<th style="width:10%"><button style="margin-left: 45px; border-radius: 5px;box-shadow:none; border-color: #6495ED; background-color: #6495ED; padding: 5px; width: 150px ">Chọn Tất Cả</button></th>*@

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.data)
                            {

                                Sach s = WebQLTV.BusinessLayer.CommonDataService.GetSach(item.MaSach);
                                <tr>
                                    <td data-th="Product">
                                        <div class="row">
                                            <div class="col-md-3 text-left">
                                                <img src="@s.Anh" alt="" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
                                            </div>
                                            <div class="col-md-9 text-left mt-sm-2">
                                                <h4>@s.TenSach</h4>
                                                <p class="font-weight-light">@WebQLTV.BusinessLayer.CommonDataService.GetNXB(s.MaNhaXuatBan).TenNhaXuatBan</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-th="Price"><p style="margin-top:20px">@DateTime.Now.AddMonths(1).ToString("dd/MM/yyyy")</p></td>
                                    <td data-th="Quantity">
                                        <input type="number" class="form-control form-control-lg text-center" value="@item.SoLuong" name="MaSach">
                                    </td>
                                    <td class="actions" data-th="">
                                        <div class="text-right">
                                            @*

                                                <div style="margin-right:90px;margin-top:7px">
                                                    <input type="checkbox">

                                                </div>
                                            *@
                                            <a href="~/cart/delete/@s.MaSach" class="btn btn-white border-secondary bg-white btn-md mb-2">
                                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                    <div class="float-right text-right">
                    </div>
                </div>
            </div>
        <div class="row mt-4 d-flex align-items-center">
                <div class="col-sm-6 order-md-2 text-right">
                    <a href="~/cart/xacnhanmuon" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Xác nhận mượn</a>
                </div>
            <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                <a href="catalog.html">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i> Tiếp tục chọn sách

                </a>
            </div>
        </div>
    </div>
</section>